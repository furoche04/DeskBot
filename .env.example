# Desktop Smart Organizer Configuration
# Copy this file to .env and modify values as needed

# Screenshot Settings
SCREENSHOT_FORMAT=PNG
SCREENSHOT_QUALITY=85
AUTO_SCREENSHOT_INTERVAL=300

# OCR Settings
OCR_LANGUAGE=eng
OCR_MIN_CONFIDENCE=50
OCR_ENABLED=true
# Path to tesseract executable (required for Windows, optional on Linux/macOS if already in PATH)
# Example (Windows): "C:\Program Files\Tesseract-OCR\tesseract.exe"
TESSERACT_PATH=

# System Monitoring Settings
MONITOR_INTERVAL=60
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90

# File Organization Settings
AUTO_ORGANIZE_ENABLED=true
AUTO_ORGANIZE_INTERVAL=1800
BACKUP_BEFORE_ORGANIZE=true

# GUI Settings
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
# THEME=light

# Logging Settings
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security Settings
USE_KEYRING=false
